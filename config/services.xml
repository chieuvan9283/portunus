<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="config.xml"/>
    </imports>

    <services>
        <service id="portunus.application" class="Portunus\Application" />

        <service id="metadata.config">
            <factory class="Doctrine\ORM\Tools\Setup" method="createAnnotationMetadataConfiguration" />
            <argument type="collection">
                <argument type="expression">service('portunus.application').getSrcDir()</argument>
            </argument>
            <argument>%portunus.dev%</argument>
            <argument type="expression">service('portunus.application').getCacheDir()</argument>
            <argument type="service" id="doctrine.cache" />
        </service>

        <service id="doctrine.db.connection" class="Portunus\Db\SqliteConnectionFactory">
            <argument>%portunus.composer_vendor_dir%/../</argument>
            <argument>%doctrine.db.filename%</argument>
            <argument>%doctrine.db.data_dir%</argument>
        </service>

        <service id="doctrine.cache" class="Doctrine\Common\Cache\ArrayCache" />

        <service id="doctrine.entity_manager">
            <factory class="Doctrine\ORM\EntityManager" method="create" />
            <argument type="expression">service('doctrine.db.connection').getConnection()</argument>
            <argument type="service" id="metadata.config" />
        </service>

        <service id="doctrine.schema_tool" class="Doctrine\ORM\Tools\SchemaTool">
            <argument type="service" id="doctrine.entity_manager" />
        </service>
    </services>
</container>
